@using ECommerce.Models.Products
@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-lg border-0 rounded-4 p-3 bg-light">

                <div class="card-header bg-gradient bg-primary text-white rounded-top-4 py-3 px-4">
                    <h2 class="mb-0">@Model.Name</h2>
                </div>

                <div class="card-body px-4 py-5">
                    <div class="mb-4">
                        <p class="fs-4"><strong>Price:</strong> ₹@Model.Price</p>
                        <p class="fs-5"><strong>Category:</strong> @Model.Category</p>
                    </div>
                    <hr />
                    <div>
                        <p class="fs-5"><strong>Description:</strong></p>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between align-items-center bg-white border-top-0 px-4 py-3">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        ← Back to Products
                    </a>
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-ProductId="@Model.ProductId"
                       class="btn btn-lg btn-success rounded-pill px-5 d-flex align-items-center gap-2">
                        <i class="bi bi-cart-plus-fill fs-5"></i> Add to Cart
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.2);
        }

    .btn-success {
        background: linear-gradient(45deg, #28a745, #218838);
        border: none;
        color: white;
    }

        .btn-success:hover {
            background: linear-gradient(45deg, #218838, #1e7e34);
            color: white;
        }

    body.dark-mode .card {
        background-color: #1e1e1e;
        color: #e0e0e0;
    }

    body.dark-mode .card-header {
        background-color: #333;
        border-bottom: 1px solid #444;
    }

    body.dark-mode .btn-outline-secondary {
        color: #ccc;
        border-color: #ccc;
    }

        body.dark-mode .btn-outline-secondary:hover {
            background-color: #ccc;
            color: #000;
        }
</style>
