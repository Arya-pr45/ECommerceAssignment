@model ECommerce.Models.Product

<h2>Product Details</h2>

<dl class="dl-horizontal">
    <dt>Product ID</dt>
    <dd>@Model.ProductId</dd>

    <dt>Name</dt>
    <dd>@Model.Name</dd>

    <dt>Price</dt>
    <dd>@Model.Price</dd>

    <dt>Category</dt>
    <dd>@Model.Category</dd>
</dl>

<a class="btn btn-secondary" href="@Url.Action("Index")">Back to Product List</a>
