﻿@using ECommerce.Models.Products
@model ProductManage

@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-plus-square-fill text-success"></i> Add a New Product</h2>
        <button class="btn btn-outline-light" id="toggleDarkMode"><i class="bi bi-moon-stars-fill"></i></button>
    </div>

    <form asp-controller="Product" asp-action="SaveProduct" method="post" class="border rounded p-4 shadow-sm bg-light dark-mode-form">
        <input type="hidden" asp-for="Action" />
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group mb-3">
            <label asp-for="Name"><i class="bi bi-tag-fill"></i> Product Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price"><i class="bi bi-currency-rupee"></i> Price</label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Category"><i class="bi bi-list-check"></i> Category</label>
            <input asp-for="Category" class="form-control" placeholder="Enter Category" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Stock"><i class="bi bi-box-seam"></i> Stock</label>
            <input asp-for="Stock" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description"><i class="bi bi-card-text"></i> Description</label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImageUrl"><i class="bi bi-image"></i> Image URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Paste image link (e.g., https://...)" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check2-circle"></i> Add Product
            </button>
            <a class="btn btn-secondary" href="/Product">
                <i class="bi bi-arrow-left-circle"></i> Back to Products
            </a>
        </div>
    </form>
</div>

<style>
    body.dark-mode {
        background-color: #121212;
        color: #e0e0e0;
    }

    .dark-mode .dark-mode-form {
        background-color: #1e1e1e !important;
        border-color: #333;
    }

    .dark-mode input, .dark-mode select {
        background-color: #333;
        color: #fff;
        border-color: #444;
    }

    .dark-mode label {
        color: #ddd;
    }

    .dark-mode .btn-outline-light {
        border-color: #ddd;
        color: #ddd;
    }

        .dark-mode .btn-outline-light:hover {
            background-color: #ddd;
            color: #121212;
        }
</style>

<script>
    document.getElementById("toggleDarkMode").addEventListener("click", function () {
        document.body.classList.toggle("dark-mode");
    });
</script>