@using ECommerce.Models.Products
@model List<Product>
@{
	ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">

	<div class="border border-2 border-primary rounded p-4 mb-5 bg-light shadow-sm d-flex justify-content-between align-items-center">
		<h2 class="text-primary fw-bold m-0">
			<i class="bi bi-person-circle me-2"></i> Welcome, @User.Identity.Name 👋
		</h2>
	</div>

	<!-- Products Grid -->
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card shadow-lg h-100 border-primary border-2 rounded-4">
					<img src="@item.ImageUrl" class="card-img-top rounded-top-4" alt="@item.Name" style="height: 230px; object-fit: cover;">
					<div class="card-body d-flex flex-column justify-content-between">
						<h5 class="card-title text-primary fw-semibold">@item.Name</h5>
						<p class="card-text fs-5 mb-3"><strong>₹@item.Price</strong> per item</p>
						<a href="@Url.Action("AddToCart","Cart", new { ProductId = item.ProductId })" class="btn btn-lg btn-primary w-100">
							<i class="bi bi-cart-plus me-1"></i> Add to Cart
						</a>
					</div>
				</div>
			</div>
		}
	</div>

</div>
